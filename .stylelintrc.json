{
  "extends": "stylelint-config-standard",
  "plugins": ["stylelint-order", "stylelint-no-unsupported-browser-features"],
  "rules": {
    "container-name-pattern": null,
    "keyframes-name-pattern": null,
    "value-keyword-case": null,
    "custom-property-pattern": null,
    "selector-id-pattern": null,
    "selector-class-pattern": null,
    "comment-empty-line-before": null,
    "rule-empty-line-before": null,
    "at-rule-empty-line-before": [
      "always",
      {
        "except": ["blockless-after-same-name-blockless", "first-nested"],
        "ignore": ["after-comment"],
        "ignoreAtRules": "supports"
      }
    ],
    "declaration-block-no-redundant-longhand-properties": [true, { "ignoreShorthands": ["flex-flow"] }],
    "color-named": "never",
    "declaration-property-value-no-unknown": [true, { "ignoreProperties": { "/.+/": "/calc-size\\(.+\\)/" } }],
    "plugin/no-unsupported-browser-features": [
      true,
      {
        "browsers": ["> 0.5%", "last 3 versions", "not dead", "not ie > 0", "not samsung > 0", "not opera > 0", "not op_mob > 0", "not op_mini all", "not kaios > 0", "not baidu > 0", "not and_qq > 0", "not android > 0", "not and_uc > 0"],
        "ignore": [
          "css-container-query-units",
          "css-relative-colors",
          "css-clip-path",
          "css-masks",
          "css-lch-lab",
          "css-nesting",
          "intrinsic-width",
          "css-media-range-syntax",
          "css-touch-action",
          "css-scrollbar",
          "css-selection",
          "css-text-indent",
          "css-overflow",
          "css-resize",
          "css3-cursors",
          "text-decoration",
          "extended-system-fonts"
        ],
        "severity": "warning"
      }
    ],
    "order/order": [
      [
        "dollar-variables",
        "at-variables",
        "custom-properties",
        "at-rules",
        "declarations",
        {
          "type": "at-rule",
          "name": "supports"
        },
        {
          "type": "at-rule",
          "name": "starting-style"
        },
        {
          "type": "at-rule",
          "name": "container"
        },
        {
          "type": "at-rule",
          "name": "media"
        },
        "rules"
      ],
      {
        "unspecified": "bottom",
        "severity": "warning"
      }
    ],
    "order/properties-order": [
